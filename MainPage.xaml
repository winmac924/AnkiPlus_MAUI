<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:AnkiPlus_MAUI.Behaviors"
             xmlns:converters="clr-namespace:AnkiPlus_MAUI.Converters"
             x:Class="AnkiPlus_MAUI.MainPage"
             Title="ノート">

    <ContentPage.Resources>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:WidthConverter x:Key="WidthConverter"/>
        <converters:HeightConverter x:Key="HeightConverter"/>
    </ContentPage.Resources>

    <Grid>
        <StackLayout>
            <!-- タイトルバー -->
            <Grid Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Text="ノート"
                       FontSize="24"
                       VerticalOptions="Center"/>
                <Button Text="Ankiモードへ"
                        Grid.Column="2"
                        VerticalOptions="Center"
                        Clicked="OnAnkiModeClicked"
                        Margin="0,0,10,0"/>
                <Button Text="新規作成"
                        Grid.Column="3"
                        VerticalOptions="Center"
                        Clicked="OnCreateNewNoteClicked"/>
            </Grid>

            <!-- スクロール可能なノートリスト -->
            <ScrollView>
                <CollectionView x:Name="NotesCollectionView"
                                ItemsSource="{Binding Notes}"
                                Margin="10,0"
                                HorizontalOptions="Fill">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical"
                                         x:Name="GridLayout"
                                         HorizontalItemSpacing="10"
                                         VerticalItemSpacing="10"
                                         Span="2"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Frame Padding="0"
                                       HasShadow="False"
                                       CornerRadius="10"
                                       WidthRequest="{Binding Source={x:Reference NotesCollectionView}, Path=Width, Converter={StaticResource WidthConverter}}"
                                       HeightRequest="{Binding Source={x:Reference NotesCollectionView}, Path=Width, Converter={StaticResource HeightConverter}}"
                                       IsEnabled="True"
                                       BackgroundColor="Transparent"
                                       BorderColor="Transparent"
                                       IsVisible="{Binding IsFolder}">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnTapped"
                                                              CommandParameter="{Binding}"/>
                                    </Frame.GestureRecognizers>
                                    <Grid>
                                        <Image Source="{Binding Icon}"
                                               Aspect="AspectFit"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               WidthRequest="{Binding Source={x:Reference NotesCollectionView}, Path=Width, Converter={StaticResource WidthConverter}}"
                                               HeightRequest="{Binding Source={x:Reference NotesCollectionView}, Path=Width, Converter={StaticResource HeightConverter}}">
                                            <Image.Behaviors>
                                                <behaviors:FadeInBehavior/>
                                            </Image.Behaviors>
                                        </Image>
                                        <Label Text="{Binding Name}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               HorizontalOptions="Center"
                                               VerticalOptions="End"
                                               Margin="10,0,10,30"
                                               TextColor="Black"
                                               LineBreakMode="NoWrap"/>
                                    </Grid>
                                </Frame>

                                <Frame Padding="0"
                                       HasShadow="True"
                                       CornerRadius="10"
                                       WidthRequest="{Binding Source={x:Reference NotesCollectionView}, Path=Width, Converter={StaticResource WidthConverter}}"
                                       HeightRequest="{Binding Source={x:Reference NotesCollectionView}, Path=Width, Converter={StaticResource HeightConverter}}"
                                       IsEnabled="True"
                                       BackgroundColor="White"
                                       IsVisible="{Binding IsFolder, Converter={StaticResource InverseBoolConverter}}">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnTapped"
                                                              CommandParameter="{Binding}"/>
                                    </Frame.GestureRecognizers>
                                    <Grid>
                                        <Image Source="{Binding Icon}"
                                               Aspect="AspectFill"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               WidthRequest="{Binding Source={x:Reference NotesCollectionView}, Path=Width, Converter={StaticResource WidthConverter}}"
                                               HeightRequest="{Binding Source={x:Reference NotesCollectionView}, Path=Width, Converter={StaticResource HeightConverter}}">
                                            <Image.Behaviors>
                                                <behaviors:FadeInBehavior/>
                                            </Image.Behaviors>
                                        </Image>
                                        <Label Text="{Binding Name}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               HorizontalOptions="Center"
                                               VerticalOptions="End"
                                               Margin="10,0,10,30"
                                               TextColor="Black"
                                               LineBreakMode="NoWrap"/>
                                    </Grid>
                                </Frame>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
        </StackLayout>
    </Grid>
</ContentPage>
